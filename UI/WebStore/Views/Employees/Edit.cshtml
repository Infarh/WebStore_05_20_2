@model WebStore.Domain.ViewModels.EmployeeViewModel

@{
    ViewData["Title"] = "Редактирование сотрудника id:" + Model.Id;
}

<div class="container">
    <h3>@ViewData["Title"]</h3>
    <hr />

    @*@using (Html.BeginForm("Edit", "Employees", FormMethod.Post))
        {

        }*@

    @*@Html.EditorForModel()*@

    <form asp-controller="Employees" asp-action="Edit" method="post">
        <div class="row">
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @*@Html.EditorFor(m => m.Id)*@

                <input asp-for="Id" type="hidden" />

                <div clas="form-group">
                    <label asp-for="Surname" class="control-label"></label>
                    <input asp-for="Surname" class="form-control" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>

                <div clas="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div clas="form-group">
                    <label asp-for="Patronymic" class="control-label"></label>
                    <input asp-for="Patronymic" class="form-control" />
                    <span asp-validation-for="Patronymic" class="text-danger"></span>
                </div>

                <div clas="form-group">
                    <label asp-for="Age" class="control-label"></label>
                    <input asp-for="Age" class="form-control" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Сохранить" class="btn btn-default" />
                    <a asp-action="Index">К списку</a>
                </div>
            </div>
        </div>
    </form>
</div>


@section Scripts
{
    <partial name="Partial/_ValidationScriptsPartial" />
}
